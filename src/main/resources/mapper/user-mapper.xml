<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <insert id="create" parameterType="User" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO db_test.user VALUES (NULL ,#{username},#{password})
    </insert>

    <update id="update" parameterType="User">
        UPDATE db_test.user  SET username = #{username},password = #{password} WHERE id = #{id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM db_test.user WHERE id = #{id};
    </delete>
    <select id="queryAll" resultType="User">
        SELECT * FROM db_test.user;
    </select>
    <select id="queryById" parameterType="int" resultType="User">
        SELECT * FROM db_test.user WHERE id = #{id};
    </select>
    <select id="signIn" parameterType="user" resultType="user">
        SELECT * FROM db_test.user WHERE username = #{username} AND password = #{password}
    </select>
</mapper>